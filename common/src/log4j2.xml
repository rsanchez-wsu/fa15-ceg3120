<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
		</Console>
		
	    <File name="fileAppender" fileName="logs/app.log">
			<PatternLayout pattern="%d %-5p [%t] %C{2} %m%n"/>
	    </File>
		
